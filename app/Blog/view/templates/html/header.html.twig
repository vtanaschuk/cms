{# base.twig file structure #}
<head>
    {% block stylesheets %}
        <link href="{{ source('./css/style.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
{#    <link href="{{ source('./css/style.css') }}" type="text/css" rel="stylesheet" />            <link href="{{ asset('public/css/main.css') }}" rel="stylesheet" />#}

{#    <link rel="stylesheet" href="{{ ('./css/style.css') }}" type="text/css">#}
    <style>
        .row{
            margin: 0 auto;
            max-width: 1200px;
        }
        header ul{
            display: flex;
            justify-content: space-around;
            padding-top: 20px;
        }
        header ul li{
            list-style: none;
        }
        header ul li a{
            text-decoration: none;
            color: #000;
            padding: 10px 20px;
            border: 1px solid black;
        }
        .content{
            display: flex;
            justify-content: space-between;
        }
        .post{
            width: 70%;
        }
        .category{
            width: 25%;
        }
        .post_item{
            border: 1px solid black;
            margin-bottom: 40px;
            border-radius: 5px;
            padding: 10px;
            display: flex;
        }
        .img_block{
            width: 40%;
            display: flex;
            justify-content: center;
        }
        .img_block img{
            max-width: 100%;
            height: 100%;
        }
        .pagination{
            display: flex;
            justify-content: center;
        }
    </style>
</head>

<div class="row">


<header>
    <nav>
        <ul>
            <li>
                <a href="/">Home</a>
            </li>
            <li>
                <a href="/admin">Admin Panel</a>
            </li>

            {% for item in page%}
                <li>
                    <a href="/page/id/{{ item.id }}">{{ item.title }}</a>
                </li>
            {% endfor %}
            {% if loginStatus %}
                <li>
                    <a href="/logout">LogOut</a>
                </li>
            {% endif %}
        </ul>
        {% if loginStatus %}
            <p>Is Admin</p>
        {% endif %}
    </nav>
</header>

